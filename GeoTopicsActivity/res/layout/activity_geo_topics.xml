<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="top"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <RelativeLayout
        android:id="@+id/top_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/start_graphic" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/top_button_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_image"
        android:layout_centerInParent="true"
        android:paddingBottom="2dp"
        android:orientation="horizontal"
        android:paddingTop="20dp" >
	<ImageButton
            android:id="@+id/start_browse_top_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/start_browse" 
            android:scaleType="fitXY"
            android:layout_toLeftOf="@+id/vert1"
            android:paddingRight="40dp" />
        <View
            android:id="@+id/vert1"
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/darker_gray"
            android:alpha="0.3" />
        <ImageButton
            android:id="@+id/start_my_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/start_mine" 
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/vert1"
            android:paddingLeft="40dp" />
    </RelativeLayout>

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_below="@id/top_button_wrapper"
        android:layout_centerHorizontal="true"
        android:alpha="0.3"
        android:background="@android:color/darker_gray"
        android:padding="0dp" />

    <RelativeLayout
        android:id="@+id/bottom_button_wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_button_wrapper"
        android:layout_centerInParent="true"
        android:paddingTop = "5dp" >

        <ImageButton
            android:id="@+id/start_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/start_favourite" 
            android:scaleType="fitXY"
            android:layout_toLeftOf="@+id/vert2"
            android:paddingRight="40dp" />
        <View
            android:id="@+id/vert2"
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:background="@android:color/darker_gray"
            android:alpha="0.3" />
        <ImageButton
            android:id="@+id/start_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/start_bookmark" 
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/vert2"
            android:paddingLeft="40dp" />
    </RelativeLayout>

</RelativeLayout>