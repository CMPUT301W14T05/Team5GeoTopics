<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:minHeight="150pt"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".CreateCommentActivity" >

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_light" />

        <EditText
            android:id="@+id/editCommentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" android:inputType="">

            <requestFocus android:layout_width="match_parent" />

        </EditText>

        <TextView
            android:id="@+id/textViewBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BODY"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_light" />

        <EditText
            android:id="@+id/editCommentBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/textViewAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AUTHOR"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_light" />

        <TextView
            android:id="@+id/editCommentAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.53"
            android:minHeight="100pt" >

            <ImageButton
                android:id="@+id/imageButtonLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_action_location" />

            <ImageButton
                android:id="@+id/imageButtonImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/textLocation"
                android:src="@drawable/ic_action_addimage" />

            <ImageButton
                android:id="@+id/imageButtonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_action_cancel" />

            <ImageButton
                android:id="@+id/imageButtonPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textAddImage"
                android:src="@drawable/ic_action_post" />

            <TextView
                android:id="@+id/textLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/imageButtonLocation"
                android:text="LOCATION" />

            <TextView
                android:id="@+id/textAddImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textLocation"
                android:layout_alignBottom="@+id/textLocation"
                android:layout_alignLeft="@+id/imageButtonImage"
                android:text="ADD IMAGE" />

            <TextView
                android:id="@+id/textPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/imageButtonPost"
                android:layout_below="@+id/imageButtonPost"
                android:text="POST   " />

            <TextView
                android:id="@+id/textCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textPost"
                android:layout_alignBottom="@+id/textPost"
                android:layout_alignParentRight="true"
                android:text="CANCEL" />

            <ImageView
                android:id="@+id/imageViewPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textAddImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:minHeight="50pt"
                android:minWidth="50pt"
                android:src="@drawable/ic_action_uploadedphoto" />

        </RelativeLayout>
    
    </LinearLayout>

</ScrollView>